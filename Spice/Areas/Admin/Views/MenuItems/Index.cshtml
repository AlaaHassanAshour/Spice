@model IEnumerable<MenuItem>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="withBachgroud border">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">MenuItem List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_createButtanPattal" />
        </div>

        <div class="col-12">
            @if (Model.Count() == 0)
            {
                <p class="text-danger">no menu item....</p>
            }
            else
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(m => m.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.CategoryId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.SubCategory)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Spicyness)

                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Imeg)

                        </th>
                        <th>

                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.SubCategory.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Spicyness)
                    </td>
                    <td>
                        <img src="@item.Imeg" width="150" />
                    </td>
                    <td style="width:150px">
                        <partial name="_opratingButtanPattail" model="item.Id" />
                    </td>

                </tr>
                    }
                </table>
            }
        </div>
    </div>
</div>