@model Coupon
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Create Category </h2>
<br />
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="withBachgroud border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Pictsur" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="file" multiple asp-for="Pictsur" class="form-control" />
                <span class="text-danger" asp-validation-for="Pictsur"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CoubonType" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="CoubonType" class="form-control" asp-items="Html.GetEnumSelectList<Coupon.ECoubonType>() "></select>
                <span class="text-danger" asp-validation-for="CoubonType"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MinimumAmount" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="MinimumAmount" class="form-control" />
                <span class="text-danger" asp-validation-for="MinimumAmount"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IsActive" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="checkbox" asp-for="IsActive" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Discount" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Discount" class="form-control" />
                <span class="text-danger" asp-validation-for="Discount"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_cerateBackeToListButtonPartial" />
            </div>
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
