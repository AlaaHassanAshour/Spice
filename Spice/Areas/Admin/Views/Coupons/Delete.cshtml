@model Coupon
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Delete Coupon </h2>
<br />
<form asp-action="Delete" method="post" enctype="multipart/form-data">
    <div class="withBachgroud border">

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Pictsur" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label  asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input readonly asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CoubonType" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select disabled asp-for="CoubonType" class="form-control" asp-items="Html.GetEnumSelectList<Coupon.ECoubonType>() "></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MinimumAmount" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input readonly asp-for="MinimumAmount" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IsActive" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input disabled type="checkbox" asp-for="IsActive" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Discount" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input readonly asp-for="Discount" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteBackeToListButtonPartial" />
            </div>
        </div>
        @if (Model.Pictsur != null)
        {
            <br />
            <br />
            <img style="width:50%;height:50%;border-radius:5px" src="@("data:image/jpeg;base64,"+Convert.ToBase64String(Model.Pictsur))" />

        }

    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
